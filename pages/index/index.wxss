/**index.wxss**/
.chat-list {
   background-color: #eeeeee;
   padding-bottom: 100rpx;
   padding-top: 16rpx;
}

.chat-cell-left {
  width: 100%;
  height: auto;
  display:flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items:flex-start;
  
}
.cat-avatar-left {
  width: 80rpx;
  height: 80rpx;
  margin: 12rpx;
  min-width: 80rpx;
}
.cat-content-left {
  width: auto;
  height: auto;
  margin-top: 16rpx;
  margin-right: 100rpx; 
  margin-bottom: 16rpx;
}
.cat-content-left-layout {
  background-color: white;
  padding: 16rpx;
  border-radius: 5rpx;
  min-height: 60rpx;
  min-width: 60rpx;
}
.cat-content-left-text {
  font-size: 12px;
  color: black;
}
.cat-image {
  width: 200rpx;
  height: 200rpx;
}

.chat-cell-right {
  width: 100%;
  height: auto;
  display:flex;
  flex-direction:row;
  justify-content: flex-end;
  align-items:flex-end;
}
.cat-avatar-right {
  width: 80rpx;
  height: 80rpx;
  margin: 12rpx;
  min-width: 80rpx;
}

.cat-content-right {
  width: auto;
  height: auto;
  margin-top: 16rpx;
  margin-left: 100rpx; 
  margin-bottom: 16rpx;
  
}
.cat-content-right-layout {
  background-color: #00897b;
  padding: 16rpx;
  border-radius: 5rpx;
  min-height: 60rpx;
  min-width: 60rpx;
}
.cat-content-right-text {
  font-size: 12px;
  color: white;
}

.input-layout {
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  background: #fff;
  position: fixed;
  bottom: 0;
  display:flex;
  flex-direction:row;
  justify-content: center;
  align-items:center;
}

.input-view {
  padding: 0rpx, 16rpx;
  width: 80%;
  height: 80rpx;
  background: white;
}

.input-button {
  width: 20%;
  height: 80rpx;
  padding-top: 10rpx;
  font-size: 13px;
  text-align: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.indexImage {
  width: 100%;
  height: 200px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 160px;
}

.buttontop {
  margin-top: 30px;
}

